<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width>>, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%-include("../partials/cabecalho.ejs")%>
    <div class="container">
    <% if(status == "1"){ %>
            <div class="alert alert-success alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            Cadastrado com <b>successo.</b>
        </div>
    <%}%>

    <% if(status == "2"){ %>
            <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            excluido com <b>successo.</b>
        </div>
    <%}%>

<a href="/alunos/cadastrar" class="btn btn-success">Cadastrar</a>
    <h2>RELATÃ“RIO DE ALUNOS</h2>
    <table class="table table-striped">

        <thead>
            <th>Matricula</th>
            <th>Nome</th>
            <th>Curso</th>
            <th>Detalhar</th>
            <th>excluir</th>
            <th>atualizar</th>
        </thead>



    <% alunos.forEach(aluno=>{%>
        <tr>
            <td><%=aluno.mat %></td>
            <td><%=aluno.nome %></td>
            <td><%=aluno.curso %></td>
            <td><a href="/alunos/<%= aluno.mat %>" class="btn btn-info">Detalhar</a></td>
            <td><a href="/alunos/atualizar/<%= aluno.mat %>" class="btn btn-warning">Atualizar</a></td>
            <td><a href="/alunos/excluir/<%= aluno.mat %>" class="btn btn-danger">excluir</a></td>
           

        </tr>






    <% }) %>
    </table>
    <a href="/" class="btn btn-secondary">voltar</a>
</div>

<%-include("../partials/rodape.ejs")%>

</body>
</html>
